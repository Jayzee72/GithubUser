<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GithubUser" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->

        <!-- Action Bar -->
        <item name="colorSurfaceContainer">@color/darkPrimary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="homeAsUpIndicator">@drawable/btn_back</item>

        <!-- FAB Favorite-->
        <item name="colorPrimaryContainer">@color/lightAccent</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Progress Bar-->
        <item name="colorSecondary">@color/lightAccent</item>

        <!-- Text Style -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>

        <!--Status Bar-->
        <item name="android:statusBarColor">@color/darkSecondary</item>

    </style>

    <style name="ScreenBackground">
        <item name="android:background">@color/lightPrimary</item>
    </style>

    <style name="CardBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AvatarBorder">
        <item name="civ_border_color">@color/lightAccent</item>
    </style>

    <style name="MenuColor">
        <item name="iconTint">@color/white</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchBarStyle" parent="Widget.Material3.SearchBar">
        <item name="android:backgroundTint">@color/lightSecondary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabBackground">@color/lightPrimary</item>
        <item name="tabIndicatorColor">@color/lightAccent</item>
        <item name="tabRippleColor">@color/darkPrimary</item>
        <item name="tabSelectedTextColor">@color/lightAccent</item>
        <item name="tabTextColor">@color/black</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.Material3.SearchView">
        <item name="backgroundTint">@color/lightSecondary</item>
    </style>

    <style name="Theme.GithubUser" parent="Base.Theme.GithubUser" />
</resources>